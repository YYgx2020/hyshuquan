/* pages/orderDetail/orderDetail.wxss */
.order_status {
  line-height: 140rpx;
  padding-left: 40rpx;
  background-color: #1abc9c;
  color: #fff;
  font-size: 36rpx;
}

.order_address {
  padding: 20rpx 40rpx 30rpx;
  position: relative;
  top: -20rpx;
  background-color: #fff;
  border-top-left-radius: 20rpx;
  border-top-right-radius: 20rpx;
  display: flex;
}

.address_icon {
  padding-right: 10rpx;
  font-size: 50rpx;
  position: relative;
  top: -24rpx;
}

.c_info_bottom {
  padding-top: 10rpx;
}

.bookInfo_container {
  position: relative;
  background-color: #fff;
  padding: 20rpx 40rpx;
}

.shop_info {
  /* font-size: 30rpx; */
  font-weight: 700;
}

.book_list {
  display: flex;
  margin-top: 20rpx;
  padding-bottom: 60rpx;
  position: relative;
}

.book_list::after {
  content: '';
  position: absolute;
  width: 100%;
  height: 2rpx;
  background-color: #f5f5f5;
  bottom: 0rpx;
}

.book_cover {
  width: 140rpx;
  height: 140rpx;
  padding-right: 60rpx;
}

.book_cover image {
  border-radius: 10rpx;
  width: 100%;
  height: 100%;
}

.book_name {
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.order_info {
  position: relative;
  margin-top: 20rpx;
  background-color: #fff;
  padding: 20rpx 40rpx;
}

.order_info_item {
  line-height: 60rpx;
}

.order_info_item text:last-child {
  font-weight: 700;
  padding-left: 40rpx;
}

.space {
  width: 100%;
  height: 180rpx;
}

.goods_amount {
  position: relative;
  margin-top: 20rpx;
  background-color: #fff;
  padding: 20rpx 40rpx;
}

#need_to_pay {
  color: #1abc9c;
  font-size: 36rpx;
}

.goods_amount_item {
  line-height: 60rpx;
}

.goods_amount_item text:last-child {
  float: right;
}

.contact_btn:not([size='mini']) {
  margin-top: 20rpx;
  background-color: #fff;
  border: 1rpx solid #acacac;
}

.control {
  position: fixed;
  bottom: 0rpx;
  height: 120rpx;
  /* line-height: 100rpx; */
  background-color: #fff;
  width: 100%;
  display: flex;
  justify-content: flex-end;
  align-items: center;
  /* padding-right: 40rpx; */
}

.cancel_btn {
  /* float: right; */
  height: 40rpx;
  padding: 10rpx 20rpx;
  border: 1rpx solid #b3b3b3;
  border-radius: 40rpx;
  margin-right: 40rpx;
}

.pay_btn {
  /* margin-left: 20rpx; */
  margin-right: 40rpx;
  color: #fff;
  padding: 10rpx 20rpx;
  border: 1rpx solid #1abc9c;
  border-radius: 40rpx;
  background-color: #1abc9c;

}

