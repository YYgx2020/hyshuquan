page {
  background-color: #fff;
}

.record_row {
  position: absolute;
  right: 40rpx;
  margin-top: 20rpx;
}

.charge_container {
  display: flex;
  flex-direction: column;
  align-items: center;
  position: relative;
}

.icon_panel {
  position: relative;
  width: 100rpx;
  height: 100rpx;
  margin-top: 200rpx;
}

image {
  width: 100%;
  height: 100%;
}

.tip_text_row {
  margin-top: 40rpx;
}

.money {
  margin: 30rpx;
  font-weight: 700;
  position: relative;
}

.money text:first-child{
  /* line-height: 0rpx; */
  position: relative;
  top: -16rpx;
  font-size: 60rpx;
  padding-right: 10rpx;
  /* padding-bottom: 40rpx; */
}

.money text:last-child {
  position: relative;
  font-size: 80rpx;
}

.charge_row {
  margin-top: 300rpx;
  margin-bottom: 30rpx;
}

.charge_row button {
  /* #1ead92 */
  /* background-color: #1ead92; */
  background-color: #00baad;
  color: #fff;
}

.cash_row button {
  color: #00baad;
}