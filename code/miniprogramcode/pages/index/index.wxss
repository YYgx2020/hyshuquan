/**index.wxss**/
.page_container {
  /* position: relative; */
  display: flex;
  flex-direction: column;
  /* width: 100%; */
  height: 100vh;
  background-color: #f5f5f5;
}

.search_wrapper {
  /* position: absolute; */
  position: relative;
  /* display: block; */
  width: 100%;
  /* width: calc(100% - 180rpx); */
  /* width: 300rpx; */
  height: 100rpx;
  /* background-color: red; */
  box-sizing: border-box;
}

.search_input {
  position: absolute;
  width: calc(100% - 180rpx);
  width: 100%;
  height: 80rpx;
}

.search_wrapper .search_input input {
  display: inline-block;
  position: absolute;
  width: calc(100% - 240rpx);
  height: 80rpx;
  top: 50%;
  margin: -40rpx 0rpx 0rpx 30rpx;
  border: 1rpx solid #f5f5f5;
  background-color: #fff;
  border-radius: 30rpx;
  padding-left: 30rpx;
  padding-right: 60rpx;
}

.search_wrapper .search_input .quxiao {
  z-index: 20;
  display: inline-block;
  width: 60rpx;
  height: 60rpx;
  line-height: 60rpx;
  text-align: center;
  position: absolute;
  top: 50%;
  margin-top: -30rpx;
  right: 130rpx;
  color: #a4b0be;
  /* background-color: red; */
}

.sourch_button {
  display: inline-block;
  width: 120rpx;
  height: 80rpx;
  text-align: center;
  line-height: 80rpx;
  position: absolute;
  right: 0;
  font-size: 32rpx;
}

/* 关注公众号组件样式 */
.offical_account {
  position: relative;
  width: calc(100vw - 60rpx);
  margin-left: 30rpx;
  margin-top: 20rpx;
}

/* 导航栏样式 */
.nav_scroll {
  position: relative;
  width: 100vw;
  display: flex;
  white-space: nowrap;
  height: 60rpx;
  /* margin-top: 0rpx; */
}

/* scroll-view去掉滚动条 */
::-webkit-scrollbar {
  width: 0;
  height: 0;
  color: transparent;
}

.nav_scroll .nav_item {
  padding: 0 40rpx;
  font-size: 32rpx;
  height: 60rpx;
  line-height: 60rpx;
  box-sizing: border-box;
}

.nav_item .active {
  font-size: 36rpx;
  color: #1ead92;
  border-bottom: 4rpx solid #1ead92;
}

.nav_content {
  height: 60rpx;
  box-sizing: border-box;
}

/* 图书内容区域 */
.swiper_container {
  position: relative;
  /* position: absolute; */
  /* margin-top: 10rpx; */
  /* top: 180rpx; */
  width: 100%;
  /* height: calc(100vh - 180rpx); */
  height: 100%;
  /* background: #ffffff; */
}

.book_scroll {
  position: relative;
  top: 0;
  height: 100%;
  /* background-color: #ffffff; */
  /* display: flex; */
}

.left {
  /* flex: 0 0 50%; */
  float: left;
  width: 50%;
  height: 100%;
  /* background-color: brown; */
  position: relative;
}

.right {
  /* flex: 1; */
  float: right;
  width: 50%;
  height: 100%;
  /* background-color: aquamarine; */
  /* padding-bottom: 30rpx; */
}

/* 图书项 */
.book_item_left {
  position: relative;
  /* width: 100%; */
  width: calc(100% - 30rpx);
  margin-left: 20rpx;
  margin-top: 20rpx;
  background-color: #fff;
  border-radius: 6rpx;
}

.book_item_right {
  position: relative;
  display: inline-block;
  /* width: 100%; */
  width: calc(100% - 30rpx);
  margin-left: 10rpx;
  margin-top: 20rpx;
  background-color: #fff;
  border-radius: 6rpx;
}

image {
  width: 100%;
  border-top-left-radius: 6rpx;
  border-top-right-radius: 6rpx;
}

.book_name {
  position: relative;
  display: -webkit-box;
  width: 100%;
  height: auto;
  padding: 0rpx 10rpx 0rpx 10rpx;
  margin: 10rpx 0 10rpx 0;
  font-size: 28rpx;
  box-sizing: border-box;
  overflow: hidden;
  text-overflow: ellipsis;
  -webkit-line-clamp:2;
  -webkit-box-orient: vertical;
}

.price {
  display: inline-block;
  width: 130rpx;
  padding-left: 10rpx;
  height: 60rpx;
  line-height: 60rpx;
  text-align: justify;
  margin-bottom: 15rpx;
  color: #1ead92;
}

.price text:first-child {
  font-size: 24rpx;
}

.price text:last-child {
  font-size: 36rpx;
  font-weight: 700;
}

.sold {
  display: inline-block;
  font-size: 24rpx;
  margin-left: 10rpx;
  color: #a4b0be;
}

.space {
  position: relative;
  width: 100%;
  height: 30rpx;
  background: transparent;
}

