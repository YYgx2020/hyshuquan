/* pages/my/my.wxss */
.header {
  position: relative;
  display: flex;
  width: auto;
  height: 400rpx;
  background-color: #00baad;
}

.no_login_panel, .login_panel {
  display: flex;
  align-items: center;
  position: relative;
}

.user_avatar {
  width: 180rpx;
  height: 180rpx;
  margin-left: 30rpx;
  /* border-radius: 50%; */
}

.user_avatar image {
  border-radius: 50%;
  width: 100%;
  height: 100%;
}

.user_name {
  display: flex;
  flex-direction: column;
  /* justify-content: space-around; */
  /* justify-content: space-between; */
  position: relative;
  margin-left: 30rpx;
  /* top: -40rpx; */
  /* font-size: 40rpx; */
}

.user_name text:first-child {
  font-size: 40rpx;
  padding: 20rpx 0rpx;
}

.user_name text:last-child {
  color: #cfcfcf;
}

.user_order_panel {
  position: relative;
  margin: 20rpx;
  padding-bottom: 30rpx;
  border-radius: 10rpx;
  background-color: #fff;
}

.title {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 20rpx 30rpx;
}

.title_left {
  height: 60rpx;
  line-height: 60rpx;
}

.look_all_order {
  height: 60rpx;
  line-height: 60rpx;
}

.order_fun_panel {
  display: flex;
  align-items: center;
  justify-content: space-around;
}

.fun_list_item {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 20rpx 20rpx;
}

.fun_list_item icon {
  font-size: 40rpx;
  padding-bottom: 10rpx;
}

.fun_hover {
  color: #00baad;
  font-weight: 700;
}

.more_fun_panel {
  /* display: flex; */
  position: relative;
  /* padding: ; */
  margin: 20rpx;
  /* padding-bottom: 30rpx; */
  border-radius: 10rpx;
  background-color: #fff;
}

.fun_item {
  position: relative;
  padding: 10rpx 30rpx;
  line-height: 80rpx;
  /* border-bottom: 1rpx solid #f5f5f5; */
  /* box-sizing: border-box; */
  /* box-sizing: content-box; */
}

.fun_item::after {
  content: '';
  position: absolute;
  bottom: 0;
  width: calc(100% - 60rpx);
  height: 1rpx;
  left: 30rpx;
  background-color: #ebe8e7;
}

.fun_item:last-child:after {
  content: '';
  position: absolute;
  bottom: 0;
  width: calc(100% - 60rpx);
  height: 1rpx;
  left: 30rpx;
  background-color: transparent;
}

.fun_item icon:first-child {
  padding-right: 16rpx;
  font-size: 36rpx;
}

.fun_item icon:last-child {
  position: absolute;
  right: 30rpx;
}

.money {
  position: absolute;
  right: 70rpx;
}

.hover {
  background-color: #dee2e6;
}

