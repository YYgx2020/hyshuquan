.commnets_container {
  /* position: relative;
  height: 100vh;
  background-color: #fff; */
}

.scroll_view {
  position: relative;
  height: 100vh;
  background-color: #fff;
}


.comments_list {
  position: relative;
  padding: 0rpx 30rpx;
  /* margin: 30rpx 0rpx; */
  /* margin-top: 50rpx; */
  margin-bottom: 80rpx;
  box-sizing: border-box;
}

.top {
  display: flex;
  margin-bottom: 20rpx;
  /* flex-direction: row; */
}

.top image {
  width: 96rpx;
  height: 96rpx;
  border-radius: 48rpx;
  margin-right: 30rpx;
}

.star_num icon {
  color: #1abc9c;
  font-size: 24rpx;
}

.content {
  height: 120rpx;
  line-height: 40rpx;
  position: relative;
  box-sizing: border-box;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 3;
  -webkit-box-orient: vertical;
}

.content_2 {
  position: relative;
  padding: 20rpx 0rpx;
}

.not_show_more {
  display: block;
  /* height: 110rpx; */
}

.show_more_btn {
  z-index: 100;
  display: inline-block;
  position: absolute;
  /* top: 110rpx; */
  bottom: -70rpx;
  right: 40rpx;
  font-size: 24rpx;
  padding: 20rpx 0rpx;
  color: #adb5bd; 
}

.close_more_btn {
  z-index: 100;
  display: inline-block;
  position: absolute;
  /* top: 90rpx; */
  /* top: 0rpx; */
  bottom: -40rpx;
  right: 40rpx;
  font-size: 24rpx;
  padding: 20rpx 0rpx;
  color: #adb5bd; 
}

.space {
  position: relative;
  width: 100%;
  height: 30rpx;
  background: transparent;
}
