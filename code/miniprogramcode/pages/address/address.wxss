/* pages/address/address.wxss */
.no_address {
  position: relative;
  line-height: 120rpx;
  text-align: center;
  font-size: 36rpx;
  color: #868e96;
}

.scroll_view {
  position: relative;
  width: auto;
  height: calc(100vh);
}

.address_item {
  position: relative;
  padding: 30rpx 40rpx 0rpx 40rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.edit_icon icon {
  font-size: 36rpx;
}

.row view {
  line-height: 44rpx;
}

.default {
  background-color: #00baad;
  border-radius: 10rpx;
  padding: 4rpx 10rpx;
  margin-right: 10rpx;
  color: #fff;
  font-size: 24rpx;
}

.row_2 {
  font-weight: 700;
}

.row_1, .row_3 {
  font-size: 24rpx;
  color: #868e96;
}

.row_3 text:first-child {
  margin-right: 60rpx;
}

.add_address {
  position: absolute;
  bottom: 0rpx;
  width: 100%;
  height: 100rpx;
  margin-bottom: 20rpx;
  /* background-color: #f5f5f5; */
  background-color: transparent;
  display: flex;
  align-items: center;
}

.add_address button {
  background-color: #00baad;
  border-radius: 40rpx;
  color: #fff;
}