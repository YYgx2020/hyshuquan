/* pages/payment/payment.wxss */

.payment_container {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.address_panel {
  display: flex;
  align-items: center;
  justify-content: space-between;
  width: calc(100% - 40rpx);
  padding: 30rpx 20rpx;
  box-sizing: border-box;
  background-color: #fff;
  border-radius: 20rpx;
  border-bottom: 2rpx solid #00baad;
}

.name_phone_row {
  font-size: 38rpx;
  font-weight: 700;
  /* padding-right: 30rpx; */
  /* margin-right: 30rpx; */
}

.name_phone_row text:first-child {
  padding-right: 40rpx;
}

.area {
  padding: 10rpx 0rpx;
}

.default {
  background-color: #00baad;
  border-radius: 10rpx;
  padding: 4rpx 10rpx;
  margin-right: 10rpx;
  color: #fff;
  font-size: 24rpx;
}

.no_address_panel {
  width: calc(100% - 40rpx);
  padding: 30rpx 30rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  background-color: #fff;
  box-sizing: border-box;
  border-radius: 20rpx;
  border-bottom: 2rpx solid #00baad;
  /* box-sizing: content-box; */
}

.no_address_panel_left {
  display: flex;
  flex-direction: column;
}

.no_address_panel_left text:first-child {
  font-size: 36rpx;
  padding-bottom: 20rpx;
  font-weight: 700;
}

.no_address_panel_left text:last-child {
  color: #adb5bd;
}

.goods_info_1 {
  width: calc(100% - 40rpx);
  position: relative;
  margin-top: 20rpx;
  padding: 20rpx 30rpx;
  background-color: #fff;
  border-radius: 20rpx;
}

.item {
  display: flex;
  align-items: center;
  position: relative;
  margin-top: 20rpx;
  width: calc(100% - 40rpx);
  border-radius: 20rpx;
  padding: 40rpx 30rpx;
  box-sizing: border-box;
  background-color: #fff;
}

.shop_name {
  line-height: 40rpx;
  font-weight: 700;
  margin-bottom: 20rpx;
  /* display: none; */
}

.content_row {
  display: flex;
  flex-direction: row;
  width: calc(100vw - 100rpx);
}

.content_row_left {
  width: 180rpx;
  height: 200rpx;
  margin-right: 30rpx;
}

.content_row_left image {
  width: 100%;
  height: 100%;
  border-radius: 20rpx;
}

.content_row_right {
  flex-grow: 1;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.content_row_right_bottom {
  display: flex;
  align-items: center;
  justify-content: space-between;
  position: relative;
}

.content_row_right_bottom .price {
  padding-top: 10rpx;
  height: 32rpx;
  line-height: 32rpx;
  color: #00baad;
  font-weight: 700;
}

.content_row_right_bottom .price text:first-child {
  font-size: 24rpx;
}

.content_row_right_bottom .price text:last-child {
  font-size: 32rpx;
}

.num_show_2 {
  color: #adb5bd;
}

.num_row {
  /* position: relative; */
  /* top: 20rpx; */
  display: flex;
  justify-content: space-between;
  /* padding: 20rpx; */
  margin-top: 50rpx;
  line-height: 80rpx;
}

.num_pancel {
  margin-right: 10rpx;
  /* display: flex; */
  /* align-items: center; */
}

.num_pancel .num_show {
  z-index: 100;
  padding: 0rpx 30rpx;
  background-color: #f5f5f5;
  margin: 0 10rpx;
}

.way_panel {
  display: flex;
  align-items: center;
  justify-content: space-between;
  position: relative;
  margin-top: 20rpx;
  width: calc(100% - 40rpx);
  border-radius: 20rpx;
  padding: 40rpx 30rpx;
  box-sizing: border-box;
  background-color: #fff;
}

.way_panel_right {
  display: flex;
  align-items: center;
}

.way_panel_right_left {
  display: flex;
  flex-direction: column;
  align-items: flex-end;
  margin-right: 20rpx;
}

.way_panel_right_left view {
  padding: 10rpx;
}

.way_panel_right_left view:first-child {
  font-weight: 700;
}

/* 底部提交面板 */
.pay_bottom_row {
  position: fixed;
  bottom: 50rpx;
  width: calc(100vw - 20rpx);
  height: 100rpx;
  border-radius: 50rpx;
  background-color: #000;
  display: flex;
  justify-content: space-between;
}

.need_to_pay {
  line-height: 100rpx;
  color: #ffffff;
  padding-left: 40rpx;
  
}

.need_to_pay text:last-child {
  font-size: 44rpx;
}

.submit_order {
  height: 100%;
  width: 240rpx;
  line-height: 100rpx;
  text-align: center;
  color: #fff;
  background-color: #00baad;
  border-top-right-radius: 50rpx;
  border-bottom-right-radius: 50rpx;
}

/* 禁止减 */
.disabled {
  color: #adb5bd;
}