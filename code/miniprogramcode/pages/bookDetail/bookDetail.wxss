/* pages/bookDetail/bookDetail.wxss */
.detail_container {
  display: flex;
  flex-direction: column;
}

.top_tag {
  /* position: fixed; */
  position: relative;
  height: 80rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-around;
  /* background-color: #fff; */
  box-shadow: rgba(117, 114, 114, 0.336) 2rpx 2rpx 2rpx;
}

.top_tag text {
  position: relative;
  top: -16rpx;
}

.active::after {
  content: '';
  position: absolute;
  bottom: -16rpx;
  margin-left: -60rpx;
  /* left: 30rpx; */
  width: 60rpx;
  height: 8rpx;
  background-color: #00baad;
}

.main_container {
  height: calc(100vh - 120px);
  /* padding-bottom: 40rpx; */
  box-sizing: border-box;
}

.space {
  position: relative;
  width: 100%;
  height: 30rpx;
  background: transparent;
}

.header_wrapper {
  /* margin-top: 100rpx; */
  width: 100%;
  height: 740rpx;
  background-color: #fff;
}

.cover {
  height: 500rpx;
  text-align: center;
}

.price {
  padding-left: 40rpx;
  font-size: 40rpx;
  font-weight: 700;
  line-height: 80rpx;
  background-color: #00baad;
}

.price text:first-child {
  font-size: 24rpx;
}

.bookName {
  font-size: 36rpx;
  font-weight: 700;
  padding-left: 24rpx;
  padding-right: 24rpx;
  padding-top: 24rpx;
  padding-bottom: 24rpx;
  /* padding: 24rpx; */
  height: 120rpx;
  /* line-height: 50rpx; */
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  box-sizing: border-box;
}

.other_info {
  /* padding: 0 40rpx; */
  /* width: 100%; */
  margin: 20rpx 20rpx;
  padding: 20rpx 24rpx;
  /* height: 360rpx; */
  border-radius: 10rpx;
  background-color: #fff;
  box-sizing: border-box;
}

.info_item {
  line-height: 80rpx;
  position: relative;
}

.info_item text:first-child {
  display: inline-block;
  font-weight: 700;
  width: 140rpx;
  padding-right: 40rpx;
}

.info_item icon {
  position: absolute;
  right: 0;
}

.comments_container {
  margin: 20rpx 20rpx;
  padding: 20rpx 24rpx 70rpx 24rpx;
  border-radius: 10rpx;
  /* height: 600rpx; */
  background-color: #fff;
  /* box-sizing: border-box; */
}

.title {
  line-height: 80rpx;
  /* margin-bottom: 10rpx; */
}

.title text:first-child {
  font-weight: 700;
}

.comments_item {
  position: relative;
  /* margin: 30rpx 0rpx; */
  margin-top: 50rpx;
  box-sizing: border-box;
}

.user_info {
  display: flex;
  margin-bottom: 20rpx;
}

.user_info image {
  width: 96rpx;
  height: 96rpx;
  border-radius: 48rpx;
  margin-right: 30rpx;
}

.user_other_info {
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.star_num icon {
  color: #00baad;
  font-size: 24rpx;
}

.time {
  position: absolute;
  right: 50rpx;
}

.content {
  /* padding: 0; */
  height: 120rpx;
  line-height: 40rpx;
  position: relative;
  /* padding: 20rpx 0rpx; */
  box-sizing: border-box;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 3;
  -webkit-box-orient: vertical;
}

.content_2 {
  position: relative;
  padding: 20rpx 0rpx;
}

.not_show_more {
  display: block;
  /* height: 110rpx; */
}

.show_more_btn {
  z-index: 100;
  display: inline-block;
  position: absolute;
  /* top: 110rpx; */
  bottom: -60rpx;
  right: 10rpx;
  font-size: 24rpx;
  padding: 20rpx 0rpx;
  color: #adb5bd; 
}

.close_more_btn {
  z-index: 100;
  display: inline-block;
  position: absolute;
  /* top: 90rpx; */
  /* top: 0rpx; */
  bottom: -40rpx;
  right: 10rpx;
  font-size: 24rpx;
  padding: 20rpx 0rpx;
  color: #adb5bd; 
}

.look_more_btn {
  position: relative;
  margin-bottom: 40rpx;
  top: 80rpx;
  width: 300rpx;
  height: 72rpx;
  line-height: 72rpx;
  text-align: center;
  color: #adb5bd;
  left: 50%;
  margin-left: -150rpx;
  border-radius: 40rpx;
  border: 1rpx solid #adb5bd;
}

.details_card {
  margin: 20rpx 20rpx;
  padding: 20rpx 24rpx 70rpx 24rpx;
  border-radius: 10rpx;
  /* height: 600rpx; */
  background-color: #fff;
  position: relative;
}

.details_item {
  margin-top: 20rpx;
}

.details_item_label {
  font-size: 28rpx;
  font-weight: 700;
}


/* 底部导航栏 */
.bottom_container {
  position: relative;
  /* padding: 0rpx 0rpx 20rpx 0rpx; */
  padding-bottom: 16rpx;
  height: 120rpx;
  display: flex;
  align-items: center;
  background-color: #e8e7e6;
}

.btn_item {
  /* position: absolute; */
  position: relative;
  top: -10rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 0 30rpx;
  font-size: 28rpx;
}

.buy_btn {
  display: flex;
  width: 400rpx;
  height: 84rpx;
  color: #fff;
}

.add_car {
  width: 200rpx;
  line-height: 84rpx;
  text-align: center;
  font-size: 28rpx;
  background-color: #333;
  border-bottom-left-radius: 42rpx;
  border-top-left-radius: 42rpx;
}

.buy_now {
  width: 200rpx;
  line-height: 84rpx;
  text-align: center;
  font-size: 28rpx;
  border-top-right-radius: 42rpx;
  border-bottom-right-radius: 42rpx;
  background-color: #00baad;
}

.buy_now:hover {
  opacity: .8;
}
