/* pages/search/search.wxss */

.search_wrapper {
  /* position: absolute; */
  position: relative;
  /* display: block; */
  width: 100%;
  /* width: calc(100% - 180rpx); */
  /* width: 300rpx; */
  height: 100rpx;
  /* background-color: red; */
  box-sizing: border-box;
}

.serach_icon {
  z-index: 10;
  position: absolute;
  width: 30rpx;
  height: 30rpx;
  /* border: 1rpx solid red; */
  left: 45rpx;
  top: 50%;
  margin-top: -16rpx;
  font-size: 36rpx;
  color: #808080;
}

.search_input {
  position: absolute;
  width: calc(100% - 180rpx);
  width: 100%;
  height: 80rpx;
}

.search_wrapper .search_input input {
  display: inline-block;
  position: absolute;
  width: calc(100% - 260rpx);
  height: 80rpx;
  top: 50%;
  margin: -40rpx 0rpx 0rpx 30rpx;
  border: 1rpx solid #f5f5f5;
  background-color: #fff;
  border-radius: 30rpx;
  padding-left: 50rpx;
  /* padding-left: 30rpx; */
  padding-right: 60rpx;
}

.search_wrapper .search_input .quxiao {
  z-index: 20;
  display: inline-block;
  width: 60rpx;
  height: 60rpx;
  line-height: 60rpx;
  text-align: center;
  position: absolute;
  top: 50%;
  margin-top: -30rpx;
  right: 130rpx;
  color: #a4b0be;
  /* background-color: red; */
}

.sourch_button {
  display: inline-block;
  width: 120rpx;
  height: 80rpx;
  text-align: center;
  line-height: 80rpx;
  position: absolute;
  right: 0;
  font-size: 32rpx;
}

/* 搜索内容为空时的样式 */
.empty {
  margin-top: 20rpx;
  text-align: center;
  font-size: 36rpx;
  color: #adb5bd;
}

.left {
  /* flex: 0 0 50%; */
  float: left;
  width: 50%;
  /* height: calc(100% - 40rpx); */
  /* background-color: brown; */
  position: relative;
}

.right {
  /* flex: 1; */
  float: right;
  width: 50%;
  /* height: calc(100% - 40rpx); */
  /* background-color: aquamarine; */
  /* padding-bottom: 30rpx; */
}

/* 图书项 */
.book_item_left {
  position: relative;
  /* width: 100%; */
  width: calc(100% - 30rpx);
  margin-left: 20rpx;
  margin-top: 20rpx;
  background-color: #fff;
  border-radius: 6rpx;
}

.book_item_right {
  position: relative;
  display: inline-block;
  /* width: 100%; */
  width: calc(100% - 30rpx);
  margin-left: 10rpx;
  margin-top: 20rpx;
  background-color: #fff;
  border-radius: 6rpx;
}

image {
  width: 100%;
  border-top-left-radius: 6rpx;
  border-top-right-radius: 6rpx;
}

.book_name {
  position: relative;
  display: -webkit-box;
  width: 100%;
  height: auto;
  padding: 0rpx 10rpx 0rpx 10rpx;
  margin: 10rpx 0 10rpx 0;
  font-size: 28rpx;
  box-sizing: border-box;
  overflow: hidden;
  text-overflow: ellipsis;
  -webkit-line-clamp:2;
  -webkit-box-orient: vertical;
}

.price {
  display: inline-block;
  width: 130rpx;
  padding-left: 10rpx;
  height: 60rpx;
  line-height: 60rpx;
  text-align: justify;
  margin-bottom: 15rpx;
  color: #00baad;
}

.price text:first-child {
  font-size: 24rpx;
}

.price text:last-child {
  font-size: 36rpx;
  font-weight: 700;
}

.sold {
  display: inline-block;
  font-size: 24rpx;
  margin-left: 10rpx;
  color: #a4b0be;
}

.space {
  position: relative;
  width: 100%;
  height: 30rpx;
  background: transparent;
}