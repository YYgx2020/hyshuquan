/* pages/order/order.wxss */

.search_wrapper {
  position: relative;
  width: 100%;
  height: 120rpx;
  box-sizing: border-box;
  background-color: #fff;
  /* margin-top: 20rpx; */
  padding: 20rpx 0rpx;
}

.serach_icon {
  z-index: 10;
  position: absolute;
  width: 30rpx;
  height: 30rpx;
  left: 45rpx;
  top: 50%;
  margin-top: -16rpx;
  font-size: 36rpx;
  color: #808080;
}

.search_input {
  position: absolute;
  width: calc(100% - 180rpx);
  width: 100%;
  height: 80rpx;
}

.search_wrapper .search_input input {
  display: inline-block;
  position: absolute;
  width: calc(100% - 260rpx);
  height: 80rpx;
  top: 50%;
  margin: -40rpx 0rpx 0rpx 30rpx;
  /* border: 1rpx solid #f5f5f5; */
  background-color: #f5f5f5;
  border-radius: 30rpx;
  padding-left: 50rpx;
  padding-right: 60rpx;
}

.search_wrapper .search_input .quxiao {
  z-index: 20;
  display: inline-block;
  width: 60rpx;
  height: 60rpx;
  line-height: 60rpx;
  text-align: center;
  position: absolute;
  top: 50%;
  margin-top: -30rpx;
  right: 130rpx;
  color: #a4b0be;
}

.sourch_button {
  display: inline-block;
  width: 120rpx;
  height: 80rpx;
  text-align: center;
  line-height: 80rpx;
  position: absolute;
  right: 0;
  font-size: 32rpx;
}

.nav_scroll {
  /* padding-top: 20rpx; */
  position: relative;
  width: 100vw;
  display: flex;
  white-space: nowrap;
  height: 80rpx;
  line-height: 60rpx;
  background-color: #fff;
  justify-content: space-around;
  /* box-sizing: content-box; */
}

.active {
  position: relative;
  /* font-size: 36rpx; */
  font-weight: 700;
  color: #00baad;
  /* border-bottom: 1rpx solid #00baad; */
}

.active text:after {
  width: 100%;
  content: '';
  position: absolute;
  height: 4rpx;
  background-color: #00baad;
  /* top: 0rpx; */
  bottom: 0rpx;
  left: 0rpx;
}

.swiper_container {
  position: relative;
  /* width: 100%; */
  height: calc(100vh - 200rpx);
  height: 100%;
}

.order_scroll {
  position: relative;
  top: 0;
  height: 100%;
}